<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headline">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-1.11sp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="input_text">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="fontFamily">@font/atkinson_hyperlegible_regular</item>-->
    </style>

    <style name="input_text2">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="input_text3">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="label_text">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#49454F</item>
    </style>

    <style name="subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#49454F</item>
        <item name="fontFamily">@font/ibm_plex_mono_regular</item>
    </style>

    <style name="supporting_">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#333333</item>
        <!--<item name="fontFamily">@font/atkinson_hyperlegible_bold</item>-->
    </style>

    <style name="label">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1C1B1F</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="label_1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1C1B1F</item>
    </style>

    <style name="label_2">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1C1B1F</item>
    </style>
</resources>